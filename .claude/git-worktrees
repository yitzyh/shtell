#!/bin/bash

# Claude Code slash command: /git-worktrees
# Show all worktrees and which branches they're on

echo "ğŸŒ³ Git Worktrees Overview"
echo "========================="

current_path=$(pwd)
current_branch=$(git branch --show-current)

echo "ğŸ“ Currently in: $current_path"
echo "ğŸŒ¿ Currently on: $current_branch"
echo ""

echo "ğŸ—‚ï¸  All Worktrees:"
echo ""

git worktree list | while IFS= read -r line; do
    # Parse the worktree line: path commit [branch]
    path=$(echo "$line" | awk '{print $1}')
    commit=$(echo "$line" | awk '{print $2}')
    branch=$(echo "$line" | grep -o '\[.*\]' | tr -d '[]')
    
    # Check if this is the current worktree
    if [ "$path" = "$current_path" ]; then
        echo "ğŸ‘‰ $path"
        echo "   â”œâ”€â”€ Branch: $branch (CURRENT)"
    else
        echo "ğŸ“ $path"
        echo "   â”œâ”€â”€ Branch: $branch"
    fi
    
    echo "   â”œâ”€â”€ Commit: $commit"
    
    # Get branch status if it's not the current worktree
    if [ "$path" != "$current_path" ] && [ -n "$branch" ]; then
        cd "$path" 2>/dev/null && {
            # Check for uncommitted changes
            if ! git diff-index --quiet HEAD -- 2>/dev/null; then
                echo "   â”œâ”€â”€ Status: ğŸ”„ Has uncommitted changes"
            elif [ -n "$(git status --porcelain 2>/dev/null)" ]; then
                echo "   â”œâ”€â”€ Status: ğŸ“ Has untracked files"
            else
                echo "   â”œâ”€â”€ Status: âœ… Clean"
            fi
            
            # Check ahead/behind status
            if git rev-parse --abbrev-ref @{u} >/dev/null 2>&1; then
                ahead=$(git rev-list --count @{u}..HEAD 2>/dev/null || echo 0)
                behind=$(git rev-list --count HEAD..@{u} 2>/dev/null || echo 0)
                if [ "$ahead" -gt 0 ] && [ "$behind" -gt 0 ]; then
                    echo "   â””â”€â”€ Sync: âš ï¸ Ahead $ahead, behind $behind"
                elif [ "$ahead" -gt 0 ]; then
                    echo "   â””â”€â”€ Sync: â¬†ï¸ Ahead $ahead"
                elif [ "$behind" -gt 0 ]; then
                    echo "   â””â”€â”€ Sync: â¬‡ï¸ Behind $behind"
                else
                    echo "   â””â”€â”€ Sync: âœ… Up to date"
                fi
            else
                echo "   â””â”€â”€ Sync: â„¹ï¸ No upstream"
            fi
            cd - >/dev/null
        } || echo "   â””â”€â”€ Status: âŒ Cannot access"
    else
        echo "   â””â”€â”€ (Details shown above)"
    fi
    echo ""
done